<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="refinePane" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.RefineParametersController">

    <top>
        <VBox prefHeight="245.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_CENTER" prefHeight="256.0" prefWidth="1000.0" spacing="15">
                    <children>

                        <!-- First Name -->
                        <VBox spacing="10.0">
                            <Label text="Last Name" />
                            <TextField fx:id="lastNameField" />
                     <Label text="Street 2" />
                     <TextField fx:id="street2Field" />
                        </VBox>

                        <!-- Last Name -->
                        <VBox spacing="10.0">
                            <Label text="First Name" />
                            <TextField fx:id="firstNameField" />
                     <Label text="City" />
                     <TextField fx:id="cityField" />
                        </VBox>

                        <!-- DOB -->
                        <VBox spacing="10.0">
                            <Label text="DOB" />
                            <TextField fx:id="dobField" />
                     <Label text="State" />
                     <TextField fx:id="stateField" />
                        </VBox>

                        <!-- Phone Number -->
                        <VBox spacing="10.0">
                            <Label text="Phone Number" />
                            <TextField fx:id="phoneNumberField" />
                     <Label text="ZIP" />
                     <TextField fx:id="zipField" />
                        </VBox>
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Street 1" />
                        <TextField fx:id="street1Field" />
                        <Label alignment="TOP_LEFT" text="Country" />
                        <TextField fx:id="countryField" />
                     </children>
                  </VBox>

                    </children>
               <padding>
                  <Insets top="30.0" />
               </padding>
                </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="searchPatientBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#searchPatientButton" text="Search" />
                  <Button fx:id="addPatientBtn" mnemonicParsing="false" text="Add" />
                  <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
               </children>
            </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TableView fx:id="resultsTable">
            <columns>
                <TableColumn fx:id="lastNameCol" text="Last Name" />
                <TableColumn fx:id="firstNameCol" text="First Name" />
                <TableColumn fx:id="dobCol" text="DOB" />
                <TableColumn fx:id="phoneNumberCol" text="Phone Number" />
                <TableColumn fx:id="street1Col" text="Street 1" />
                <TableColumn fx:id="street2Col" text="Street 2" />
                <TableColumn fx:id="cityCol" text="City" />
                <TableColumn fx:id="stateCol" text="State" />
                <TableColumn fx:id="zipCol" text="ZIP" />
                <TableColumn fx:id="countryCol" text="Country" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
